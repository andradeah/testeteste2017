<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <gradient
          android:startColor="#76A9C9"
          android:centerColor="#94C7DD"
          android:endColor="#7AC8E9"
          android:angle="270"/>
    </shape>
    <solid android:color="#94C7DD" />
  </item>
  <item>
    <shape>
      <solid android:color="#000000" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape>
      <gradient
          android:startColor="#76A9C9"
          android:centerColor="#94C7DD"
          android:endColor="#7AC8E9"
          android:angle="270"/>
    </shape>
    <solid android:color="#94C7DD" />    
  </item>  
</selector>