		<TextView
			style="@style/HeaderGrid.Right"
			android:layout_width="0dp"
			android:layout_weight="0.8"
			android:text="Meta" />

		<TextView
			style="@style/HeaderGrid.Right"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="Venda" />

		<TextView
			style="@style/HeaderGrid.Right"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="%M/V" />
