<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<TableRow>

			<TextView
				android:id="@+id/tvCodigoNomeProduto"
				style="@style/TextInGrid.Line1"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:singleLine="true" />

			<TextView
				android:id="@+id/tvUnidadeMedida"
				style="@style/TextInGrid.Line1"
				android:layout_width="35dp"
				android:layout_height="wrap_content"/>
		</TableRow>
	</TableLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/tvMetaDia"
			style="@style/TextInGrid.Line2.Right"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.8"/>

		<TextView
			android:id="@+id/tvVendaDia"
			style="@style/TextInGrid.Line2.Right"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<TextView
			android:id="@+id/tvPorcentagemMetaVenda"
			style="@style/TextInGrid.Line2.Right"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>

</LinearLayout>
