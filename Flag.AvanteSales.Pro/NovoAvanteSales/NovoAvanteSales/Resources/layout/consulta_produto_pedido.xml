<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <TextView
      style="@style/LabelInForm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="CONSULTA DAS 4 ÃšLTIMAS VENDAS"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textSize="14dp" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:src="@drawable/linhabranca_2_telaabout" />

  <TextView
      android:id="@+id/tvPedido"
      style="@style/LabelAnswerInForm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:singleLine="true"/>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@drawable/background_marginColor"
      android:orientation="horizontal" >

    <TextView
        style="@style/HeaderGrid.Right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Qtd." />

    <TextView
        style="@style/HeaderGrid.Right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="R$ Un" />

    <TextView
        style="@style/HeaderGrid.Right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="R$ Total" />
  </LinearLayout>

  <ListView
     android:cacheColorHint="#00000000"
     android:id="@+id/lvwProdutoPedido"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:choiceMode="singleChoice">
  </ListView>
  
</LinearLayout>