    android:layout_height="wrap_content">

	<TextView
		  android:id="@+id/tvSeq"
		  style="@style/TextInGrid.Right"
		  android:layout_width="0dp"
		  android:layout_weight="0.48"
		  android:text="200" />

	<TextView
		android:id="@+id/tvCondicao"
		style="@style/TextInGrid.Right"
		android:layout_width="0dp"
