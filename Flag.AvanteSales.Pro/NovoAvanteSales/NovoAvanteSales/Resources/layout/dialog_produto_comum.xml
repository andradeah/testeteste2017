<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:padding="10dp">
    <TextView
		android:textColor="@color/black"
        android:padding="10dp"
        android:id="@+id/lblNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:text="NESCAU" />
    <TableLayout
        android:id="@+id/tbMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Produto:"
                android:layout_height="wrap_content"
                style="@style/LabelInForm" />
            <TextView
                android:id="@+id/tvDescApelidoProduto"
                style="@style/LabelAnswerInForm"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Grupo:"
                android:layout_height="wrap_content"
                style="@style/LabelInForm" />
            <TextView
                android:id="@+id/tvDescGrupo"
                style="@style/LabelAnswerInForm"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Família:"
                android:layout_height="wrap_content"
                style="@style/LabelInForm" />
            <TextView
                android:id="@+id/tvFamilia"
                style="@style/LabelAnswerInForm"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblDetalheProduto"
                android:text="Detalhe:"
                android:visibility="gone"
                style="@style/LabelInForm"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDetalheProduto"
                android:visibility="gone"
                style="@style/LabelAnswerInForm"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="R$ Un.:"
                android:layout_height="wrap_content"
                style="@style/LabelInForm" />
            <TextView
                android:id="@+id/tvVlrUnitario"
                style="@style/LabelAnswerInForm"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<Button
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
            android:id="@+id/btnAdicionar"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/Button"
            android:text="Adicionar" />
		<Button
			android:layout_marginRight="10dp"
            android:id="@+id/btnConsultaUltimosPedidos"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/Button"
            android:text="Últimos pedidos" />
    </LinearLayout>
</LinearLayout>