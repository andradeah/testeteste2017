<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<android.support.v7.widget.Toolbar
        android:id="@+id/tbToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
		<ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/logoavante_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" />
	</android.support.v7.widget.Toolbar>
	<RelativeLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray">
		<TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblVendedor"
            android:text="vendedor" />
		<TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblData"
            android:text="xx/xx/xx" />
	</RelativeLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">

		 <TableLayout
        style="@style/TableBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            style="@style/TableRowWithBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LabelInForm.Right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Início expediente:" />
            <TextView
                android:id="@+id/lblInicioExpediente"
                style="@style/LabelAnswerInForm.Left"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            style="@style/TableRowWithBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LabelInForm.Right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Fim expediente:" />
            <TextView
                android:id="@+id/lblFimExpediente"
                style="@style/LabelAnswerInForm.Left"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
    <Button
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnExpediente"
        android:text="Iniciar Expediente" />
    <TableLayout
        android:layout_marginTop="20dp"
        style="@style/TableBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tblAlmoco">
        <TableRow
            style="@style/TableRowWithBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LabelInForm.Right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Início almoço:" />
            <TextView
                android:id="@+id/lblInicioAlmoco"
                style="@style/LabelAnswerInForm.Left"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            style="@style/TableRowWithBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/LabelInForm.Right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Fim almoço:" />
            <TextView
                android:id="@+id/lblFimAlmoco"
                style="@style/LabelAnswerInForm.Left"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
    <Button
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnAlmoco"
        android:text="Iniciar Almoço" />

	</LinearLayout>
</LinearLayout>