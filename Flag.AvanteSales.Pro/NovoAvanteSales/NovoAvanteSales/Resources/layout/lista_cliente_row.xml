<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="top">
	<LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
		<TextView
            android:paddingLeft="10dp"
            android:id="@+id/liRazaoSocial"
            style="@style/TextInGrid"
            android:layout_width="0dp"
            android:layout_weight="1" />
		<ImageView
            android:id="@+id/imgFoto"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_foto_select" />
		<ImageView
            android:id="@+id/imgSituacaoFinanceira"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
		<ImageView
            android:id="@+id/imgInformacoesPdv"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_simulacao_preco_select" />
	</LinearLayout>
	<LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
		<TextView
            android:id="@+id/lblBairro"
            android:paddingLeft="10dp"
            style="@style/TextInGrid.Line2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Nova Gameleira" />
		<Button
			android:focusable="false"
			android:id="@+id/btnMeta"
			android:paddingLeft="10dp"
			android:layout_weight="1"
      android:layout_width="0dp"
			style="?android:attr/borderlessButtonStyle" />
		<Button
			android:focusable="false"
			android:id="@+id/btnTotalVendas"
			android:paddingLeft="10dp"
			android:layout_weight="1"
      android:layout_width="0dp"
			style="?android:attr/borderlessButtonStyle" />
		<TextView
			android:id="@+id/lblPolitica"
			android:paddingLeft="10dp"
			style="@style/TextInGrid.Line2"
			android:layout_weight="0.5"
      android:layout_width="0dp"
			android:text="F" />
	</LinearLayout>
</LinearLayout>