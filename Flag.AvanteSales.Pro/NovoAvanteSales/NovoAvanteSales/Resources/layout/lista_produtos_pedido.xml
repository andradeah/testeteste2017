<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
        android:id="@+id/llFooter"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true">
		<TextView
            android:id="@+id/tvProdutos"
            style="@style/LabelInForm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Total:" />
		<TextView
            android:id="@+id/txtProdutosVendidos"
            style="@style/LabelAnswerInForm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Produtos/Vendidos:" />
		<TextView
            android:id="@+id/tvTotal"
            style="@style/LabelInForm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Total R$:" />
		<TextView
            android:id="@+id/txtTotal"
            style="@style/LabelAnswerInForm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Total:" />
	</LinearLayout>
	<LinearLayout
        android:layout_above="@id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
		<LinearLayout
            android:id="@+id/HeaderListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_marginColor"
            android:orientation="horizontal">
			<TextView
                style="@style/HeaderGrid.Right"
                android:layout_width="0dp"
                android:layout_weight="0.71"
                android:text="U.M." />
			<TextView
                style="@style/HeaderGrid.Right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Qtd." />
			<TextView
                style="@style/HeaderGrid.Right"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:text="R$ Unit./Markup" />
			<TextView
                style="@style/HeaderGrid.Right"
                android:layout_width="0dp"
                android:layout_weight="0.93"
                android:text="R$ " />
			<TextView
                style="@style/HeaderGrid.Right"
                android:layout_width="0dp"
                android:layout_weight="0.93"
                android:text="Desc." />
		</LinearLayout>
		<ListView
            android:cacheColorHint="#00000000"
            android:id="@+id/listProdutos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
	</LinearLayout>
</RelativeLayout>