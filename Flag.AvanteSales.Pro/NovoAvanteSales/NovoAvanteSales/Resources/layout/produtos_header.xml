<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
	  android:id="@+id/headerContent"
	  android:orientation="horizontal"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tvRazaoSocial"
			android:text="Cód"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_marginLeft="12dp"
			style="@style/HeaderGrid"
			android:tag="@string/Codigo"/>
		<TextView
			android:text="M"
			android:layout_width="0dp"
			android:layout_weight=".38"
			style="@style/HeaderGrid"
			android:tag="@string/M"/>
		<TextView
			android:text="U"
			android:layout_width="0dp"
			android:layout_weight=".38"
			style="@style/HeaderGrid"
			android:tag="@string/U"/>
		<TextView
			android:text="E"
			android:layout_width="0dp"
			android:layout_weight=".62"
			style="@style/HeaderGrid"
			android:tag="@string/E"/>
		<TextView
			android:text="U.M."
			android:layout_width="0dp"
			android:layout_weight=".77"
			style="@style/HeaderGrid"
			android:tag="@string/U.M"/>
		<TextView
		  android:text="G.C."
		  android:layout_width="0dp"
			android:layout_weight=".85"
		  style="@style/HeaderGrid"
		  android:tag="@string/G.C"/>
		<TextView
			android:id="@+id/tvHeaderValor"
			android:text="R$"
			android:layout_width="0dp"
			android:layout_weight=".74"
			style="@style/HeaderGrid.Right"
			android:tag="@string/ValorUnitario"/>

	</LinearLayout>

</LinearLayout>
