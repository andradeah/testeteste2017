<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<Spinner
			android:id="@+id/cmbPedidos"
			android:layout_width="match_parent"/>

		<TableLayout
			style="@style/TableBackground"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TableRow style="@style/TableRowWithBorder" >

				<TextView
					style="@style/LabelInForm.Right"
					android:layout_width="wrap_content"
					android:text="Cliente:" />

				<TextView
					android:id="@+id/lblCliente"
					style="@style/LabelAnswerInForm"
					android:layout_width="0dp"
					android:layout_weight="1" />
			</TableRow>

			<TableRow style="@style/TableRowWithBorder" >

				<TextView
					style="@style/LabelInForm.Right"
					android:layout_width="wrap_content"
					android:text="Operação:" />

				<TextView
					android:id="@+id/lblOperacao"
					style="@style/LabelAnswerInForm"
					android:layout_width="wrap_content"/>
			</TableRow>

			<TableRow style="@style/TableRowWithBorder" >

				<TextView
					style="@style/LabelInForm.Right"
					android:layout_width="wrap_content"
					android:text="Condição:" />

				<TextView
					android:id="@+id/lblCondicao"
					style="@style/LabelAnswerInForm.Left"
					android:layout_width="0dp"
					android:layout_weight="1"/>
			</TableRow>

			<TableRow style="@style/TableRowWithBorder" >

				<TextView
					style="@style/LabelInForm.Right"
					android:layout_width="wrap_content"
					android:text="%Ad.F.:" />

				<TextView
					android:id="@+id/lblAdf"
					style="@style/LabelAnswerInForm.Right"
					android:layout_width="wrap_content" />

				<TextView
					style="@style/LabelInForm.Left"
					android:layout_width="wrap_content"
					android:layout_marginLeft="20dp"
					android:text="R$ Desc:" />

				<TextView
					android:id="@+id/lblValorDesconto"
					style="@style/LabelAnswerInForm.Right"
					android:layout_width="wrap_content" />
			</TableRow>

			<TableRow
				style="@style/TableRowWithBorder"
				android:layout_width="wrap_content" >

				<TextView
					style="@style/LabelInForm.Right"
					android:layout_width="wrap_content"
					android:text="R$ Total:" />

				<TextView
					android:id="@+id/tvValorTotal"
					style="@style/LabelAnswerInForm.Right"
					android:layout_width="wrap_content" />
			</TableRow>
		</TableLayout>
	</LinearLayout>

	<Button
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:id="@+id/btnListarProdutos"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true"
		android:text="Listar Produtos" />

</RelativeLayout>