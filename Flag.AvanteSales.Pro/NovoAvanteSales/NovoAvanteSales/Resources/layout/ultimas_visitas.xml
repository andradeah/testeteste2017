<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<Button
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
        android:id="@+id/btnListarPedido"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="Lista de produtos" />
	<ScrollView
        android:layout_above="@id/btnListarPedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
			<RadioGroup
                android:id="@+id/rgpRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
			<ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_x="0dp"
                android:layout_y="418dp"
                android:src="@drawable/linhabranca_2_telaabout" />
			<TableLayout
                android:id="@+id/tblUltimasVisitas"
                style="@style/TableBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:text="Operação:" />
					<TextView
                        android:id="@+id/lblOperacao"
                        style="@style/LabelAnswerInForm"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
				</TableRow>
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:text="Condição:" />
					<TextView
                        android:id="@+id/lblCondicao"
                        style="@style/LabelAnswerInForm"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
				</TableRow>
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:text="% Ad. F.:" />
					<TextView
                        android:id="@+id/lblAdf"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight="0.40" />
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.35"
                        android:text="R$ desc.:" />
					<TextView
                        android:id="@+id/lblValorDesconto"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight="0.30" />
				</TableRow>
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
				</TableRow>
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content">
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:text="R$ total:" />
					<TextView
                        android:id="@+id/lblTotalPedi"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight="0.40" />
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.35"
                        android:text="Peso total:" />
					<TextView
                        android:id="@+id/lblTotalPeso"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight="0.30" />
				</TableRow>
				<TableRow
                    style="@style/TableRowWithBorder"
                    android:layout_width="wrap_content">
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:text="R$ abatim.:" />
					<TextView
                        android:id="@+id/lblValorAbatimento"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight="0.40" />
					<TextView
                        style="@style/LabelInForm"
                        android:layout_width="0dp"
                        android:layout_weight=".35"
                        android:text="Status:" />
					<TextView
                        android:id="@+id/lblStatusPedido"
                        style="@style/LabelAnswerInForm.Right"
                        android:layout_width="0dp"
                        android:layout_weight=".3" />
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>